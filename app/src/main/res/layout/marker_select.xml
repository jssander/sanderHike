<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_black_circle" />

    <ImageView
        android:id="@+id/imageRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@mipmap/ic_red_circle" />

    <ImageView
        android:id="@+id/imageBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_blue_circle" />

    <ImageView
        android:id="@+id/imageGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@mipmap/ic_green_circle" />

    <ImageView
        android:id="@+id/imageYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_yellow_circle" />

    <ImageView
        android:id="@+id/imageViolet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@mipmap/ic_violet_circle" />

    <ImageView
        android:id="@+id/imageOrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@mipmap/ic_orange_circle" />

    <ImageView
        android:id="@+id/imageWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        app:srcCompat="@mipmap/ic_white_circle" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done" />
</LinearLayout>